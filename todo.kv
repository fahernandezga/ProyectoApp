#:kivy 1.0.9


BoxLayout:
    orientation: 'vertical'
    Menu:
        size_hint_y: .1
        manager: screen_manager
    Pantallas:
        size_hint_y: .9
        id: screen_manager

<Menu>:
    orientation: "vertical"
    ActionBar:
        top: 0
        ActionView:
            ActionPrevious:
            ActionButton:
                text: 'Inicio'
                on_press: root.manager.current = 'pantalla_principal'

            ActionButton:
                text: 'Agrega una tarea nueva'
                on_press: root.manager.current = 'pantalla_adicional'

<AgregarTexto>:
    texto_ingresado: input
    TextInput:
        id: input
        pos: root.center_x - 220, 300
        size: 400,50
    Button:
        size: 130,40
        pos: root.center_x - 75, 200
        text: 'Agregar'
        on_release: root.subir_input()


<Pantallas>:
    id: screen_manager

    PantallaPrincipal:
        name: 'pantalla_principal'
        manager: 'screen_manager'

    PantallaAdicional:
        name: 'pantalla_adicional'
        manager: 'screen_manager'


<PantallaPrincipal>:
    BoxLayout:
        orientation: "vertical"
        VistaPantalla:

<VistaPantalla>:
    viewclass: 'Label'
    RecycleBoxLayout:
        color: 1,1,1,1
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<PantallaAdicional>:
    BoxLayout:
        Label:
            text: "Agrega una tarea"
